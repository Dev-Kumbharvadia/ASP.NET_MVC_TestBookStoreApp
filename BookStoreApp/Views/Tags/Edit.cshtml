@model BookStoreApp.Models.Tag

@{
    ViewData["Title"] = "Edit Tag"; // Set the page title
}

<h2>Edit Tag</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name" class="control-label">Tag Name</label>
        <input type="text" class="form-control" asp-for="Name" placeholder="Enter tag name" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
