@model IEnumerable<BookStoreApp.Models.Publisher>

@{
    ViewData["Title"] = "Publishers";
}

<h2>Publishers</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var publisher in Model)
        {
            <tr>
                <td>@publisher.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@publisher.Id" class="btn btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@publisher.Id" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@publisher.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Publisher</a>
