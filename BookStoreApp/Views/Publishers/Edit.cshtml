@model BookStoreApp.Models.Publisher

@{
    ViewData["Title"] = "Edit Publisher";
}

<h2>Edit Publisher</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name" class="control-label">Publisher Name</label>
        <input type="text" class="form-control" asp-for="Name" placeholder="Enter publisher name" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
