@model BookStoreApp.Models.Category

@{
    ViewData["Title"] = "Delete Category"; // Set the page title
}

<h2>Delete Category</h2>

<h3>Are you sure you want to delete this category?</h3>

<div class="mb-3">
    <h4>@Model.Name</h4>
</div>

<!-- Form to confirm deletion -->
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a> <!-- Add a cancel option for better user experience -->
</form>