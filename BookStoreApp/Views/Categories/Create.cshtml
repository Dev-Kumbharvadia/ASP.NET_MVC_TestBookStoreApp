@model BookStoreApp.Models.Category

@{
    ViewData["Title"] = "Create Category"; // Set the page title
}

<h2>Create Category</h2>

<!-- Begin form for creating a category -->
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Category Name</label>
        <input type="text" class="form-control" asp-for="Name" placeholder="Enter category name" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

<a asp-action="Index" class="btn btn-secondary mt-2">Back to List</a>
