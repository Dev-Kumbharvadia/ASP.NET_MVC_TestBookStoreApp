@model BookStoreApp.Models.Author

@{
    ViewData["Title"] = "Create Author"; // Set the page title
}

<h2>Create Author</h2>

<!-- Begin form for creating a new author -->
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Author Name</label>
        <input type="text" class="form-control" asp-for="Name" placeholder="Enter author name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

<!-- Link to navigate back to the authors index -->
<a asp-action="Index" class="btn btn-secondary mt-2">Back to List</a>
